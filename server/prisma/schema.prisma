// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  MSME
  LENDER
  ADMIN
}

enum InvoiceStatus {
  PENDING
  VERIFIED
  FUNDED
  SETTLED
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

enum TransactionStatus {
  INITIATED
  COMPLETED
}

// Models

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  role         Role
  gstin        String?
  business_age Int?     @map("business_age")
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  invoices Invoice[] @relation("UserInvoices")
  bids     Bid[]     @relation("UserBids")

  @@index([email])
  @@map("users")
}

model Invoice {
  id           String        @id @default(uuid())
  user_id      String
  amount       Decimal       @db.Decimal(15, 2)
  due_date     DateTime
  buyer_gstin  String
  status       InvoiceStatus @default(PENDING)
  gst_verified Boolean       @default(false)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt

  user         User          @relation("UserInvoices", fields: [user_id], references: [id], onDelete: Cascade)
  credit_score CreditScore?
  bids         Bid[]
  transactions Transaction[]

  @@index([user_id])
  @@index([status])
  @@map("invoices")
}

model CreditScore {
  id         String    @id @default(uuid())
  invoice_id String    @unique
  score      Int
  risk_level RiskLevel
  created_at DateTime  @default(now())

  invoice Invoice @relation(fields: [invoice_id], references: [id], onDelete: Cascade)

  @@map("credit_scores")
}

model Bid {
  id              String   @id @default(uuid())
  invoice_id      String
  lender_id       String
  interest_rate   Decimal  @db.Decimal(5, 2)
  funding_percent Decimal  @db.Decimal(5, 2)
  created_at      DateTime @default(now())

  invoice Invoice @relation(fields: [invoice_id], references: [id], onDelete: Cascade)
  lender  User    @relation("UserBids", fields: [lender_id], references: [id], onDelete: Cascade)

  @@index([invoice_id])
  @@index([lender_id])
  @@map("bids")
}

model Transaction {
  id            String            @id @default(uuid())
  invoice_id    String
  funded_amount Decimal           @db.Decimal(15, 2)
  interest      Decimal           @db.Decimal(15, 2)
  status        TransactionStatus @default(INITIATED)
  created_at    DateTime          @default(now())

  invoice Invoice @relation(fields: [invoice_id], references: [id], onDelete: Cascade)

  @@index([invoice_id])
  @@map("transactions")
}